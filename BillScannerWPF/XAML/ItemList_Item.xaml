<UserControl x:Class="Igor.BillScanner.WPF.UI.ItemList_Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:core="clr-namespace:Igor.BillScanner.Core;assembly=Igor.BillScanner.Core"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="600">

	<d:UserControl.DataContext>
		<core:ItemList_ItemViewModel/>
	</d:UserControl.DataContext>
	
	<Grid HorizontalAlignment="Stretch">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"></ColumnDefinition>
			<ColumnDefinition Width="auto"></ColumnDefinition>
		</Grid.ColumnDefinitions>
		
		<TextBlock Text="{Binding ItemName}"	Grid.Column="0" VerticalAlignment="Center" Margin="5,0,0,0" ></TextBlock>
		<TextBlock Text="{Binding ItemPrice}"	Grid.Column="2" VerticalAlignment="Center"					></TextBlock>
	</Grid>
</UserControl>
