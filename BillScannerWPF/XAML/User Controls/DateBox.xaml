<UserControl x:Class="Igor.BillScanner.WPF.UI.DateBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Igor.BillScanner.WPF.UI"
             xmlns:core="clr-namespace:Igor.BillScanner.Core;assembly=Igor.BillScanner.Core"
             mc:Ignorable="d" 
             d:DesignHeight="32" d:DesignWidth="100">

	<d:UserControl.DataContext>
		<core:DateBoxViewModel/>
	</d:UserControl.DataContext>
	
	<Grid>
		<Border BorderBrush="{Binding BorderColor}" Visibility="{Binding IsValidInput}" BorderThickness="2.5">
			<TextBox Text="{Binding CurrentText, UpdateSourceTrigger=PropertyChanged}"
					 VerticalContentAlignment="Center" x:Name="DateBoxInputTextBox"/>
		</Border>
	</Grid>
</UserControl>
