<Window x:Class="BillScannerWPF.SetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BillScannerWPF"
        mc:Ignorable="d"
        Title="SetupWindow" Height="200" Width="400">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="20"></RowDefinition>
			<RowDefinition></RowDefinition>
			<RowDefinition Height="20"></RowDefinition>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="20"></ColumnDefinition>
			<ColumnDefinition Width="1*"></ColumnDefinition>
			<ColumnDefinition Width="1*"></ColumnDefinition>
			<ColumnDefinition Width="20"></ColumnDefinition>
		</Grid.ColumnDefinitions>
		<ComboBox	Grid.Column="1" Grid.Row="1" x:Name="SETUP_SelectShop_Dropdown" MaxHeight="48" Margin="20,0" />
		<Button		Grid.Column="2" Grid.Row="1" x:Name="SETUP_SwitchScene_Button" Content="Open Application" Margin="20,0"/>
	</Grid>
</Window>
